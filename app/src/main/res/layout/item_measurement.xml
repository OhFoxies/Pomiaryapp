<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="15dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/margin_radius">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/measurementName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="Nazwa pomiaru" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/measurementDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="24-05-2025" />
        </LinearLayout>

        <Button
            android:id="@+id/showButton"
            android:layout_width="300sp"
            android:layout_height="50dp"
            android:text="WyÅ›wietl"
            android:textColor="#dce0d9"
            android:textSize="18sp"
            android:backgroundTint="#520834"/>
    </LinearLayout>
